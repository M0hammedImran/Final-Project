<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="../assets/style.css" />
    <link rel="stylesheet" href="../assets/admin.css" />
    <link
      rel="shortcut icon"
      href="../assets/images/favicon.ico"
      type="image/x-icon"
    />
    <script
      src="https://kit.fontawesome.com/31957ff6ff.js"
      crossorigin="anonymous"
    ></script>
    <title>LibSol</title>
  </head>
  <body>
    <header>
      <div class="logo">
        <a href="/">LibSol</a>
      </div>
      <nav>
        <ul>
          <li>
            <a class="anim" href="/request"><i class="fas fa-search"></i></a>
          </li>
          <li><a class="anim" href="/">Home</a></li>
          <li><a class="anim" href="/contact">Contact us</a></li>
          <li><a class="anim" href="/adminLogin">Admin Login</a></li>
          <li><a class="anim" href="/register">Sign-Up</a></li>
        </ul>
      </nav>
    </header>
    <div class="form-container">
      <form action="/dashboard/addbook" method="POST">
        <div class="main">
          <input
            type="text"
            name="book_id"
            id="book_id"
            placeholder="Book ID"
            required
          />
          <input
            type="text"
            name="book_name"
            id="book_name"
            placeholder="Book Name"
            required
          />
          <input
            type="text"
            name="author"
            id="author"
            placeholder="Author"
            required
          />
          <input
            type="text"
            name="publisher"
            id="publisher"
            placeholder="Publisher"
            required
          />
          <input
            type="text"
            name="published_year"
            id="published_year"
            placeholder="Published Year"
            required
          />
          <input
            type="text"
            name="origin_country"
            id="origin_country"
            placeholder="Origin/Country"
            required
          />
          <input
            type="number"
            name="pages"
            id="pages"
            placeholder="No. of Pages"
            required
          />
          <input
            type="text"
            name="copies"
            id="copies"
            placeholder="No. of Copies"
            required
          />
          <input type="file" name="cover" id="cover" required />
          <button type="submit">Submit</button>
          <button onclick="window.location.href='/dashboard'">Cancel</button>
        </div>
      </form>
    </div>
  </body>
</html>
