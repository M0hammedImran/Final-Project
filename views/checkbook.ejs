<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('Head'); -%>
  </head>
  <body>
    <%- include('Header'); -%>
    <div class="main-cont">
      <div class="contt">
        <div class="info">
          <h2>Name</h2>
          <h3><%= book.book_name%></h3>
          <br />
          <h2>Author</h2>
          <h3><%= book.author%></h3>
          <br />
          <h2>Publisher</h2>
          <h3><%= book.publisher%></h3>
          <br />
          <h2>Published Year</h2>
          <h3><%= book.published_year%></h3>
          <br />
          <h2>Country</h2>
          <h3><%= book.origin_country%></h3>
          <br />
          <h2>No. of Pages</h2>
          <h3><%= book.pages%></h3>
          <br />
        </div>
        <div class="image-contt">
          <img
            src="/assets/images/books/<%=book.book_id%>.jpg"
            alt="Book Cover"
          />
        </div>
      </div>
      <form action="/dashboard/confirmbookremoval" method="POST">
        <div class="sub-btn">
          <button type="submit">Confirm</button>
        </div>
      </form>
    </div>
  </body>
</html>
