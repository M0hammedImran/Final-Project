<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('Head'); -%>
  </head>
  <body>
    <%- include('Header'); -%> <% if (messages.error) { %> <% messages.error %>
    <% } %>
    <div class="grid-layout">
      <form action="/adminLogin" method="POST">
        <div class="main">
          <div class="text">
            <h3>Admin Login</h3>
          </div>

          <div class="admin">
            <input
              type="text"
              class="input"
              required
              placeholder="User Name"
              name="email"
              id="email"
            />
          </div>

          <div class="password">
            <input
              type="password"
              class="input"
              placeholder="Password"
              required
              name="password"
              id="password"
            />
          </div>

          <div class="btn">
            <button type="submit">Submit</button>
            <button onclick="window.location.href='/'">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
