<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('Head'); -%>
  </head>
  <body>
    <%- include('Header'); -%>
    <!--  -->
    <% if (messages.info) { %>
    <span><% messages.info %></span>
    <% } %>

    <div class="form-container">
      <form action="/register" id="myForm" method="POST">
        <h3 class="note">Note: ( * ) Indicates Compulsary Fields</h3>
        <div class="main">
          <div class="name-container">
            <input
              type="text"
              class="input"
              required
              placeholder="First Name *"
              name="firstName"
              id="fname"
            />
            <input
              type="text"
              class="input"
              placeholder="Last Name"
              name="lastName"
              id="lname"
            />
          </div>
          <div class="gender_date">
            <div class="gen">
              <input
                type="radio"
                required
                name="gender"
                value="male"
                id="male"
                checked
              />
              <label for="male">Male</label>
              <input
                type="radio"
                required
                name="gender"
                value="female"
                id="female"
              />
              <label for="female">Female</label>
              <input
                type="radio"
                required
                name="gender"
                value="other"
                id="other"
              />
              <label for="other">Other</label>
            </div>
            <div class="date-con">
              <!-- <input
                placeholder="Date"
                class="input"
                type="text"
                onfocus="(this.type='date')"
                onblur="(this.type='text')"
                id="date"
              /> -->
              <input
                type="date"
                onload=""
                required
                class="input"
                id="date"
                name="DOB"
                min="1985-01-01"
              />
            </div>
          </div>
          <div class="address">
            <input
              type="text"
              required
              class="input"
              name="address1"
              id="address1"
              placeholder="Address Line 1 *"
            />
            <input
              type="text"
              required
              class="input"
              name="address2"
              id="address2"
              placeholder="Address Line 2 *"
            />
          </div>
          <div class="email">
            <input
              type="email"
              required
              class="input"
              id="email"
              name="email"
              placeholder="Enter email *"
            />
            <input
              type="tel"
              required
              class="input"
              id="phone"
              pattern="[6-9]{1}\d{9}"
              name="phone"
              placeholder="Phone No. *"
            />
          </div>
          <div class="pass"></div>
          <div class="btn">
            <button class="button" id="btn" type="submit">Submit</button>
            <button
              class="button"
              id="btnR"
              onclick="window.location.href='/adminLogin'"
            >
              Cancel
            </button>
          </div>
        </div>
      </form>
    </div>
    <script>
      document.querySelector('#date').valueAsDate = new Date();
    </script>
  </body>
</html>
